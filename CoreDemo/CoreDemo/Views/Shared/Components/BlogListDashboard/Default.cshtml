@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title mb-0">Son 10 Blog</p>
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Kategori</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.BlogImage" class="mr-2" /></td>
                                    <td>@item.BlogTitle</td>
                                    <td>@(((DateTime)item.BlogCreateDate).ToString("MMMM dd, yyyy"))</td>
                                    <td class="font-weight-medium"><div class="badge badge-success">@item.Category.CategoryName</div></td>
                                    <td><a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-primary">Detaylar</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
