@using EntityLayer.Concrete
@model List<Blog>

<div >
    <h3 class="footer-heading mb-4">Son Postlar</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
<li>
    <a href="/Blog/BlogReadAll/@item.BlogID ">
        <img src="@item.BlogImage" alt="Image placeholder" class="mr-4">
        <div class="text">
            <h4>@item.BlogTitle</h4>
            <div class="post-meta">
                <span class="mr-2">@(((DateTime)item.BlogCreateDate).ToString("MMMM dd, yyyy")) </span>
            </div>
        </div>
    </a>
</li>            }
        </ul>
    </div>

</div>


    

