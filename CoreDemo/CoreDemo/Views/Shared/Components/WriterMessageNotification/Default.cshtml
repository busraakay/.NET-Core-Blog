@using EntityLayer.Concrete
@model List<Message2>
<div class="tab-pane fade" id="chats-section" role="tabpanel" aria-labelledby="chats-section">
    <div class="d-flex align-items-center justify-content-between border-bottom">
        <p class="settings-heading border-top-0 mb-3 pl-3 pt-0 border-bottom-0 pb-0">Mesajlar</p>
    </div>
    @foreach (var item in Model)
    {
        <ul class="chat-list">
            <li class="list active">
                <div class="profile"><img src="@item.SenderUser.WriterImage" alt="image"><span class="online"></span></div>
                <div class="info">
                    <p>@item.SenderUser.WriterName sana mesaj gönderdi.</p>
                    <p>@item.MessageDetails</p>
                </div>
                <small class="text-muted my-auto">@item.MessageDate.ToShortDateString()</small>
            </li>
        </ul>
    }

</div>
