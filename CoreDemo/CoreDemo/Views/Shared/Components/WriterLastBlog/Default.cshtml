@using EntityLayer.Concrete
@model List<Blog>

<div class="sidebar-box">
    <h3 class="heading">Yazarın Diğer Yazıları</h3>
    @foreach (var item in Model)
    {
    <div class="post-entry-sidebar">
        <ul>
            <li>
                <a href="~/VitrinTema/">
                    <img src="@item.BlogImage" alt="Image placeholder" class="mr-4">
                    <div class="text">
                        <h4>@item.BlogTitle</h4>
                        <div class="post-meta">
                            <span class="mr-2">@(((DateTime)item.BlogCreateDate).ToString("MMMM dd, yyyy"))</span>
                        </div>
                    </div>
                </a>
            </li>
            
        </ul>
    </div>
    }
</div>