<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum bırakın..</h3>
    <form action="/Comment/PartialAddComment/" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">İsim *</label>
            <input type="text" class="form-control" 
                   id="name" name="CommentUserName" placeholder="Adınız Soyadınız">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="text" class="form-control" id="email"
                   name="CommentTitle" placeholder="Konu">
        </div>

        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea name="CommentContent" id="message" cols="30" rows="10"
                      class="form-control" placeholder="Yorumunuz"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" value="Gönder" class="btn btn-primary">Yorum Yap</button>
        </div>

    </form>
</div>