@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Yazar Profil Bilgileri Düzenleme</h3>

            <form class="" method="post">
                <div class="form-group">
                    <label>Yazar Adı ve Soyadı</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    <input type="text" asp-for="@Model.mail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.username" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Yeni Şifre</label>
                    <input type="text" asp-for="@Model.password" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    <input type="text" asp-for="@Model.imageurl" class="form-control" />
                </div>
                @*<div class="form-group">
                        <label>Resim Yükle</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Resim yükle">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Resim Seç</button>
                            </span>
                        </div>
                    </div>*@
                <div class="form-group">
                    <label>Yazar Hakkında</label>
                    <input type="text" asp-for="@Model.description" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success mr-2">Güncelle</button>
            </form>


        </div>
    </div>

