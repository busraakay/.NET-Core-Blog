
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="content-wrapper">

    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">Hoşgeldin @ViewBag.v5</h3>

                </div>
                <div class="col-12 col-xl-4">
                    <div class="justify-content-end d-flex">
                        <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                            <button class="btn btn-sm btn-light bg-white " type="button" aria-haspopup="true" aria-expanded="true">
                                <i class="mdi mdi-calendar"></i> Bugün (@DateTime.Now.ToShortDateString())
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card tale-bg">
                <div class="card-people mt-auto">
                    <img src="~/YazarTema/images/dashboard/people.svg" alt="people">
                    <div class="weather-info">

                        <div class="d-flex">
                            <img alt="image" src="@ViewBag.icon">
                            <div>

                                <h2 class="mb-0 font-weight-normal">@ViewBag.temperature<sup>°C</sup></h2>
                            </div>
                            <div class="ml-2">
                                <h4 class="location font-weight-normal">Türkiye</h4>
                                <h6 class="font-weight-normal">Sakarya</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin transparent">
            <div class="row">
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-tale">
                        <div class="card-body">
                            <p class="mb-4">Toplam Blog Sayısı</p>
                            <p class="fs-30 mb-2">@ViewBag.v1</p>
                            <p>Core 5.0</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-dark-blue">
                        <div class="card-body">
                            <p class="mb-4">Sizin Blog Sayınız</p>
                            <p class="fs-30 mb-2">@ViewBag.v2</p>
                            <p>Core 5.0</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                    <div class="card card-light-blue">
                        <div class="card-body">
                            <p class="mb-4">Toplam Kategori Sayısı</p>
                            <p class="fs-30 mb-2">@ViewBag.v3</p>
                            <p>Core 5.0</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 stretch-card transparent">
                    <div class="card card-light-danger">
                        <div class="card-body">
                            <p class="mb-4">Toplam Yazar Sayısı</p>
                            <p class="fs-30 mb-2">@ViewBag.v4</p>
                            <p>Core 5.0</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("WriterAboutOnDashboard")
    @await Component.InvokeAsync("BlogListDashboard")
    @await Component.InvokeAsync("CategoryListDashboard")

</div>
