
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>

    <div class="site-wrap">

        <div class="site-mobile-menu">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/VitrinTema/images/demarches-en-ligne.jpg'); ">
            <div class="container">
                <div class="row same-height justify-content-center">
                    <div class="col-md-12 col-lg-10">
                        <div class="post-entry text-center">
                            <h1 class="">Bize Ulaşın</h1>
                            <p class="lead mb-4 text-white">Düşünceleriniz bizim için çok kıymetli.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="site-section bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 mb-5">



                        <form method="post" class="p-5 bg-white">


                            <div class="row form-group">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="text-black" for="fname">Adınız</label>
                                    <input type="text" name="ContactUserName" id="fname" class="form-control">
                                </div>
                                
                            </div>

                            <div class="row form-group">

                                <div class="col-md-12">
                                    <label class="text-black" for="email">Mail Adresiniz</label>
                                    <input type="email" id="email" name="ContactMail" class="form-control">
                                </div>
                            </div>

                            <div class="row form-group">

                                <div class="col-md-12">
                                    <label class="text-black" for="subject">Konu</label>
                                    <input type="text" id="subject" name="ContactSubject" class="form-control">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="text-black" for="message">Mesajınız</label>
                                    <textarea name="ContactMessage" id="message"  cols="30" rows="7" class="form-control" placeholder="Düşüncelerinizi buraya yazın..."></textarea>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Gönder" class="btn btn-primary py-2 px-4 text-white">
                                </div>
                            </div>


                        </form>
                    </div>
                    <div class="col-md-5">

                        <div class="p-4 mb-3 bg-white">
                            <p class="mb-0 font-weight-bold">Adres</p>
                            <p class="mb-4">İstanbul, Türkiye</p>

                            <p class="mb-0 font-weight-bold">Telefon</p>
                            <p class="mb-4"><a href="#">0500 000 0000</a></p>

                            <p class="mb-0 font-weight-bold">Email Adresi</p>
                            <p class="mb-0"><a href="#">deneme@domain.com</a></p>

                        </div>

                    </div>
                </div>
            </div>
        </div>


        

    </div>
</body>
</html>