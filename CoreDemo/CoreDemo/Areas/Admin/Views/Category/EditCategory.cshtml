
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Düzenle</h4>
            @using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Kategori ID</label>
                    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Kategori Adı</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryName)
                </div>
                <div class="form-group">
                    <label>Kategori Açıklaması</label>
                    @Html.TextAreaFor(x => x.CategoryDescription, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryDescription)
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            }
        </div>
    </div>
</div>

