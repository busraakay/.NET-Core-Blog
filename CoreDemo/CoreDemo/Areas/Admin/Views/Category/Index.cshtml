@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Kategori Adı </th>
                            <th> Aktif Yap </th>
                            <th> Pasif Yap </th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.CategoryID </td>
                                <td> @item.CategoryName </td>
                                <td><a href="#" class="btn btn-inverse-success btn-rounded">Aktif Yap</a></td>
                                <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" 
                                       id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-inverse-danger btn-rounded">Pasif Yap</a></td>
                                <td><a href="/Admin/Category/EditCategory/@item.CategoryID/" class="btn btn-inverse-warning btn-rounded">Düzenle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <br />
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            <br />
            <a href="/Admin/Category/AddCategory/" class="btn btn-primary ">Yeni Kategori Ekle</a>

        </div>

    </div>
</div>

