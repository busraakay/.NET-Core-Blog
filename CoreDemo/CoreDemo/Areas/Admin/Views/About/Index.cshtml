@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda Sayfası</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Misyonumuz </th>
                            <th> Vizyonumuz </th>
                            <th> Resim1 </th>
                            <th> Resim2 </th>
                            <th> Resim2 </th>
                            <th> Aktif Yap </th>
                            <th> Pasif Yap </th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.AboutID </td>
                                <td> @item.AboutDetails1 </td>
                                <td> @item.AboutDetails2 </td>
                                <td> @item.AboutImage1 </td>
                                <td> @item.AboutImage2 </td>
                                <td> @item.AboutMapLocation </td>
                                <td><a href="/Admin/About/AboutActive/@item.AboutID/" class="btn btn-inverse-success btn-rounded">Aktif Yap</a></td>
                                <td><a href="/Admin/About/AboutPassive/@item.AboutID/" 
                                       id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-inverse-danger btn-rounded">Pasif Yap</a></td>
                                <td><a href="/Admin/About/EditAbout/@item.AboutID/" class="btn btn-inverse-warning btn-rounded">Düzenle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <br />
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            <br />
            <a href="/Admin/About/AddAbout/" class="btn btn-primary ">Hakkımızda Ekle</a>

        </div>

    </div>
</div>

