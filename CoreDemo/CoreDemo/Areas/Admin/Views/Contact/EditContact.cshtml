
@{
    ViewData["Title"] = "EditContact";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Düzenle</h4>
            @using (Html.BeginForm("EditContact", "Contact", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Contact ID</label>
                    @Html.TextBoxFor(x => x.ContactID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Yazar Adı</label>
                    @Html.TextBoxFor(x => x.ContactUserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactUserName)
                </div>
                <div class="form-group">
                    <label>İletişim Maili</label>
                    @Html.TextAreaFor(x => x.ContactMail, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactMail)
                </div>
                <div class="form-group">
                    <label>İletişim Hakkında</label>
                    @Html.TextAreaFor(x => x.ContactSubject, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactSubject)
                </div>
                <div class="form-group">
                    <label>İletişim Mesajı</label>
                    @Html.TextAreaFor(x => x.ContactMessage, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactMessage)
                </div>
                <div class="form-group">
                    <label>İletişim Tarihi</label>
                    @Html.TextAreaFor(x => x.ContactDate, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactDate)
                </div>
                <div class="form-group">
                    <label>İletişim Durumu</label>
                    @Html.TextAreaFor(x => x.ContactStatus, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactStatus)
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            }
        </div>
    </div>
</div>

