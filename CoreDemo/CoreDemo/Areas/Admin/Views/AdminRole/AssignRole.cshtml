@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input" />
            <label for="@Model[i].Exist" class="form-check-label">@Model[i].Name</label>
        </div>

    }
    <br />
    <button class="btn btn-success"> Değişiklikleri Kaydet</button>
</form>
<br />
<a href="/Admin/AdminRole/UserRoleList/" class="btn btn-info">Kullanıcı Listesine Dön</a>

