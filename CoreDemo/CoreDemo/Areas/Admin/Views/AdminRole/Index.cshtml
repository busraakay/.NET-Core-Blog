@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rol Listesi</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Role Adı </th>
                            <th> Sil </th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Id </td>
                                <td> @item.Name </td>
                                <td>
                                    <a href="/Admin/AdminRole/DeleteRole/@item.Id/"
                                       id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-inverse-danger btn-rounded">Sil</a>
                                </td>
                                <td><a href="/Admin/AdminRole/UpdateRole/@item.Id/" class="btn btn-inverse-warning btn-rounded">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <a href="/Admin/AdminRole/AddRole/" class="btn btn-primary ">Yeni Rol Ekle</a>
            <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-info">Kullanıcı Rol Listesi</a>
        </div>

    </div>
</div>

